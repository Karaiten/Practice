@model SoftwareStore.Models.SoftwareListViewModel
@{
    ViewBag.Title = "Список ПЗ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Каталог програмного забезпечення</h2>

<p>
    @Html.ActionLink("Додати ПЗ", "Create")
</p>

<form method="get">
    <div class="form-inline">
        <label>Категорія:</label>
        @Html.DropDownList("categoryId", Model.Categories, new { @class = "form-control" })

        <label>Тип ліцензії:</label>
        @Html.DropDownList("licenseType", Model.LicenseTypes, new { @class = "form-control" })

        <input type="submit" value="Фільтрувати" class="btn btn-primary" />
    </div>
</form>

<br />

<table class="table">
    <tr>
        <th>Назва</th>
        <th>Розробник</th>
        <th>Версія</th>
        <th>Ціна</th>
        <th>Тип ліцензії</th>
        <th>Категорія</th>
        <th></th>
    </tr>

    @foreach (var item in Model.Softwares)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Developer</td>
            <td>@item.Version</td>
            <td>@item.Price</td>
            <td>@item.LicenseType</td>
            <td>@(item.Category != null ? item.Category.Name : "Без категорії")</td>
            <td>
                @Html.ActionLink("Редагувати", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Деталі", "Details", new { id = item.Id }) |
                @Html.ActionLink("Видалити", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
